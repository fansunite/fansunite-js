{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./lib",
        "target": "es5",
        "baseUrl": "./",
        "lib": ["es2017", "dom"],
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "pretty": true,
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
    },
    "include": [
        "./src/**/*",
        "./test/**/*",
        "./node_modules/@types/bn.js/*",
        "./node_modules/@types/chai/*",
        "./node_modules/@types/underscore/*",
        "./node_modules/@types/mocha/*"
    ]
}
